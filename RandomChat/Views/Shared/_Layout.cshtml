@using Microsoft.AspNetCore.Http
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RandomChat</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>

    @* Navigation Bar *@
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="default" asp-controller="Home" asp-action="Index">Ducko-Chatto</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav" style="float:right;">
                        @if (Context.Session.GetInt32(nameof(AppUser.UserID)) == null)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="default" asp-controller="Home" asp-action="Index">Login</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav nav-item" style="float:right;">
                                <a class="nav-link text-dark" asp-area="default" asp-controller="Home" asp-action="Logout">Logout</a>
                            </li>
                        }
                    </ul>
                       <ul class="navbar-nav flex-grow-1">
                        @if (Context.Session.GetInt32(nameof(AppUser.UserID)) == null)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="default" asp-controller="Home" asp-action="Create">Register</a>
                            </li>
                        }
                        else 
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="User" asp-action="Index">Profile</a>
                            </li>
                        }
                    </ul>
                </div>
                </div>
            </nav>

        </header>
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>

        @* Footer *@
        <footer class="border-top footer text-muted">
            <div class="container">

                <div style=" display: flex;align-items: center; justify-content: center">&copy; 2020 - Ducko-Chatto - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a></div>


                <div class="animation">
                    <div class="img" style=" display: flex;align-items: center; justify-content: center">
                        <img src="../css/img/duck.png" alt="Smiley face" height="30" width="30">
                    </div>
                </div>


            </div>
        </footer>
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        @RenderSection("Scripts", required: false)
    </body>
</html>


@model RandomChat.Models.AppUser

@{
    ViewData["Title"] = "User profile";
}

<h1>Account profile</h1>
<div>
    <h4>Account detail and deactivate</h4>
    <hr />
    <dl class="row">
        <dd class = "col-sm-10">
           Account Email: @Html.DisplayFor(model => model.Login.Email)
        </dd class>
    </dl>
    
    <form asp-action="Delete" method="post">
        <input type="submit" value="Deactivate" class="btn btn-danger" />
    </form>
    <hr />
    <div class="row">
        <div class="card" style="width: 18rem;">
            <div class="card-header">
                Your created topics:
            </div>
            <ul class="list-group list-group-flush">
                @foreach (var topic in Model.Topics)
                {
                    <li class="list-group-item">@topic.TopicName</li>
                }
            </ul>
        </div>

        <div class="card" style="width: 18rem; margin-left:50px">
            <div class="card-header">
                Your comment topics:
            </div>
            <ul class="list-group list-group-flush">
                @foreach (var reply in ViewBag.replies)
                {
                    <li class="list-group-item">@Html.Raw(reply.Reply)</li>
                }
            </ul>
        </div>
    </div>
</div>
